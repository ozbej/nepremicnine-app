<style>
hr {
  margin-top:3em;
  margin-bottom: 3em;
}

.slika {
  height: 200px;
  width: 300px;
}

h3 {
  font-weight: normal;
}

h4 a {
  color: black;
}

h4 a:hover {
  color: black;
}

#comments-section {
  display: none;
}
</style>

<div class="row">
<div class="col-3"></div>
<div class="col-6">
<p id="notice"><%= notice %></p>

<p>
  <h1><%= @place.ime %></h1>
</p>

<div class="slika">
<%= image_tag @place.image_url.to_s, class: "slika" %>
</div>

<p>
  <h3><%= @place.opis %></h2>
</p>

<p>
  <strong>Lokacija:</strong>
  <%= @place.lokacija %>
</p>

<p>
  <strong>Kraj:</strong>
  <%= @place.kraj %>
</p>
<hr>
<div class="komentarji">
<h4><%= link_to "Komentarji", "#", id:"comments-link" %> (<%= @place.comments.count %>)</h4><br>
<section id="comments-section">
<div class="komentar">
	<%= render @place.comments %>
</div>
<% if user_signed_in? %>
<div class="dodaj_kom">
	<h3>Dodaj komentar:</h3>
	<%= render "comments/form" %>
</div>
</section>
<% if current_user.admin == true && %>
<div class="btn btn-secondary"><%= link_to 'Edit', edit_place_path(@place) %></div> |
<% end %>
<% end %>
<div class="btn btn-secondary"><%= link_to 'Back', places_path %></div>
<div class="col-3"></div>
